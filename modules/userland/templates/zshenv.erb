# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ "$SHLVL" -eq 1 && ! -o LOGIN && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi

export mainSshServ=<%= scope.lookupvar('userland::installer::mainSshServ') %>
export mainSshPort=<%= scope.lookupvar('userland::installer::mainSshPort') %>
export mainSshUser=<%= scope.lookupvar('userland::installer::mainSshUser') %>

