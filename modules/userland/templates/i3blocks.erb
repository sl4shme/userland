# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#

# Global properties
separator_block_width=15

[volume]
label=♪
instance=Master
command=/usr/libexec/i3blocks/volume
interval=10
signal=10

<% if scope.lookupvar('userland::i3::laptop') == true %>
[battery]
label=B
command=/usr/libexec/i3blocks/battery
interval=30
<% end %>

[memory]
label=M
command=/usr/libexec/i3blocks/memory
interval=30

[cpu]
label=C
command=/usr/libexec/i3blocks/cpu_usage
interval=10
min_width=00.00%
separator=false

[load]
command=/usr/libexec/i3blocks/load_average
interval=10

[network]
label=N
instance=<%= scope.lookupvar('userland::i3::mainInterface') %>
command=/usr/libexec/i3blocks/network
#color=#00FF00
interval=10

[download]
label=↓
command=/usr/libexec/i3blocks/bandwitch rx
min_width=000 kB/s
align=right
#color=#00FF00
interval=1
separator=false

[upload]
label=↑
command=/usr/libexec/i3blocks/bandwitch tx
min_width=000 kB/s
align=right
#color=#FF0000
interval=1

[time]
command=/home/<%= scope.lookupvar('userland::installer::username') %>/.i3/i3datecal
interval=1

